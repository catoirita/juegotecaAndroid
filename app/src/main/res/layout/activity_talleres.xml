<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopastel"
    tools:context=".TalleresActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/britannicbold"
        android:text="TALLERES"
        android:textColor="@color/rojo"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Taller Danza Urbana -->
            <LinearLayout
                android:id="@+id/layoutDanzaUrbana"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/danza"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="DANZA URBANA"
                        android:textColor="@color/rojo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="174dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Precio: 200Bs. Hip hop de manera creativa, clases llenas de energía y diversión."
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/ButtonDanzaUrbana"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:backgroundTint="@color/rojo"
                        android:text="+ info"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Taller Pre-Ballet -->
            <LinearLayout
                android:id="@+id/layoutPreBallet"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ballet"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="PRE-BALLET"
                        android:textColor="@color/rojo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="174dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Precio: 250 Bs. Primeros pasos en ballet, desarrollo de habilidades motoras."
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/ButtonPreBallet"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:backgroundTint="@color/rojo"
                        android:text="+ info"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Taller Club de Ciencias -->
            <LinearLayout
                android:id="@+id/layoutClubCiencias"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ciencias"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="CLUB DE CIENCIAS"
                        android:textColor="@color/rojo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="174dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Precio 180 Bs. Exploración del mundo de la ciencia mediante experimentos."
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/ButtonClubCiencias"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:backgroundTint="@color/rojo"
                        android:text="+ info"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Taller Apoyo Escolar -->
            <LinearLayout
                android:id="@+id/layoutApoyoEscolar"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frances"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="APOYO ESCOLAR"
                        android:textColor="@color/rojo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="174dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Precio: 150 Bs. Refuerzo escolar en diversas materias y asignaturas."
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonApoyoEscolar"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:backgroundTint="@color/rojo"
                        android:text="+ info"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
